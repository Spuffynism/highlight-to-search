{
  "name": "Highlight to Search",
  "description": "Allows very quick search for text.",
  "version": "0.1",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "commands": {
    "search-text": {
      "suggested_key": {
        "default": "Alt+Shift+S",
        "mac": "Alt+Shift+S"
      },
      "description": "Search text"
    },
    "define-text": {
      "suggested_key": {
        "default": "Alt+Shift+D",
        "mac": "Alt+Shift+D"
      },
      "description": "Define text"
    }
  },
  "permissions": [
    "activeTab",
    "browsingData"
  ],
  "manifest_version": 2
}